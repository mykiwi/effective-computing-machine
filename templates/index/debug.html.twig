{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block stylesheets %}
    <meta name="ROBOTS" content="NOINDEX,NOFOLLOW,NOARCHIVE">
    <style>
        #packages { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        #packages pre { background: #F5F5F5; padding: 2px 6px; }
    </style>
{% endblock %}


{% block body %}
    <a href="#packages">go to Packages</a><br>
    {{ php_info|raw }}
    <hr>
    <div id="packages">
        <pre>{{ php_packages|json_encode(constant('JSON_THROW_ON_ERROR')  b-or constant('JSON_PRETTY_PRINT')  b-or constant('JSON_UNESCAPED_SLASHES')) }}</pre>
    </div>
{% endblock %}
